# makefile for client simulator
# DO MAKE CLEAN IN CLIENT/ and LIB/ FIRST

CXXFLAGS = -g -DSIM \
    -I ../lib \
    -I ..

OBJS = \
    app.o \
    client_msgs.o \
    cs_apps.o \
    cs_scheduler.o \
    cpu_sched.o \
    log_flags.o \
    rr_sim.o \
    sim.o \
    sim_util.o \
    time_stats.o \
    work_fetch.o \
    ../sched/edf_sim.o \
    ../lib/coproc.o \
    ../lib/mfile.o \
    ../lib/miofile.o \
    ../lib/msg_log.o \
    ../lib/parse.o \
    ../lib/prefs.o \
    ../lib/str_util.o

all: sim

sim: $(OBJS) sim.h
	$(CXX) $(CXXFLAGS) $(OBJS) -o sim -ldl
