			</clear_button>
			<messages_link_image>
				<image>
					<imagesrc>graphic/btnMessages.png</imagesrc>
				</image>
			</messages_link_image>
			<messages_alert_link_image>
				<image>
					<imagesrc>graphic/btnMessagesOrange.gif</imagesrc>
				</image>
			</messages_alert_link_image>
			<suspend_link_image>
				<image>
					<imagesrc>graphic/btnSnooze.png</imagesrc>
				</image>
