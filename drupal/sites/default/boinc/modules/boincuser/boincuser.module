      break;
      
    default:
    }
    
    $form['cancel'] = array(
      '#value' => '<li class="tab">' . l(bts('Cancel'), $cancel_dest) . '</li>',
      '#weight' => 1004,
    );
    $form['form control tabs suffix'] = array(
