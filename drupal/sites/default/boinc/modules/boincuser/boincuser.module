    $form['account']['account_key'] = array(
      '#value' => '
        <div class="form-item">
          <label>Account Key</label>
          <span>' . $account->boincuser_account_key . '</span>
        </div>',
    );
    $form['account']['weak_account_key'] = array(
      '#value' => '
        <div class="form-item">
          <label>Weak Account Key</label>
          <span>' . $account->boincuser_weak_auth . '</span>
        </div>',
    );
